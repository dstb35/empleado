<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:contextClickable="false"
    android:key="preferencias_principal"
    app:defaultValue="false">
    <EditTextPreference
        android:inputType="text"
        android:key="URL"
        android:title="Dirección del servidor"
        android:defaultValue="https://benoodle.net"/>
    <EditTextPreference
        android:key="store"
        android:title="Tienda"
        android:inputType="number"
        android:defaultValue="01"/>
    <EditTextPreference
        android:key="copies"
        android:title="Número de copias de tickets a imprimir"
        android:inputType="number"
        android:defaultValue="1"/>
    <!--<CheckBoxPreference
        android:key="autoassign"
        android:title="¿Aignación automática de pedidos?"
        android:defaultValue="false" />-->
    <CheckBoxPreference
        android:key="autoprint"
        android:title="¿Imprimir pedidos creados al finalizar la compra y cobrar pedidos?"
        android:defaultValue="true" />
    <PreferenceScreen
        android:title="Version"
        android:key="version"
        android:summary="">
    </PreferenceScreen>
    <PreferenceCategory
        android:key="printer"
        android:summary="Impresora">
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>